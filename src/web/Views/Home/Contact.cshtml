@{
	ViewData["Title"] = "Contact Me";
}
@section styles {
	<style>
	.btn { line-height: 30px; }
	.btn > .glyphicons { font-size: 18px; }
	</style>
}
<div class="row">
	<div class="col-sm-6">
		<address>
			One Microsoft Way<br />
			Redmond, WA 98052-6399<br />
			<abbr title="Phone">P:</abbr>
			425.555.0100
		</address>

		<address>
			<strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br />
			<strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
		</address>
	</div>
	<div class="col-sm-6">
		<form method="post" asp-action="contact">
			<fieldset>
				<legend>Send me a message</legend>
				<div class="form-group">
					<label for="from-email">Your Email Address</label>
					<input type="email" id="from-email" name="fromEmail" class="form-control" placeholder="Your Email Address">
				</div>
				<div class="form-group">
					<label for="message">Message</label>
					<textarea id="message" name="message" class="form-control" rows="5"></textarea>
				</div>
			</fieldset>
			<button type="submit" class="btn btn-primary"><span class="glyphicons glyphicons-envelope"></span> Send Message</button>
		</form>
	</div>
</div>